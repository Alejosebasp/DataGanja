<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alejosebasp.dataganja.vistas.Inventario"
    android:padding="5dp"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventario"
            android:id="@+id/TV_inventario"
            style="@style/TextView_Titulos"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_weight="0.5" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/icon"
                    android:id="@+id/imageView"
                    android:layout_column="0"
                    android:layout_weight="1" />

                <Button
                    android:text="Productos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:background="#3399FF"
                    android:textColor="#ffffff"
                    android:layout_column="0"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/IM_animales_inventario"
                    android:layout_column="0"
                    android:src="@drawable/icon_animales2"
                    android:layout_weight="1"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Animales"
                    android:id="@+id/BT_animales_inventario"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="#3399FF"
                    android:textColor="#ffffff"
                    android:layout_margin="2dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/IM_herramientas_inventario"
                    android:layout_column="0"
                    android:src="@drawable/icon_herramientas"
                    android:layout_weight="1"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/materiales"
                    android:id="@+id/BT_herramientas_inventario"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="#3399FF"
                    android:textColor="#ffffff"
                    android:layout_margin="2dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/IM_insumos_inventario"
                    android:layout_column="0"
                    android:src="@drawable/icon_insumos"
                    android:layout_weight="1"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insumos"
                    android:id="@+id/BT_insumos_inventario"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="#3399FF"
                    android:textColor="#ffffff"
                    android:layout_margin="2dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView android:id="@+id/IM_otros_inventario"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rueda"
                    android:layout_weight="1"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maquinaria"
                    android:id="@+id/BT_otros_inventario"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="#3399FF"
                    android:textColor="#ffffff"
                    android:layout_margin="2dp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>
